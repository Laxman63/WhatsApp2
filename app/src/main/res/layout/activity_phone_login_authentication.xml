<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginAuthentication">
  <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:drawableStart="@drawable/ic_smartphone_black_24dp"
    android:background="@drawable/input"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:id="@+id/phonenumber"
    android:inputType="phone"
    android:layout_marginTop="40dp"
    android:textAlignment="center"
    android:padding="10dp"
    android:hint="enter mobile number"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:background="@drawable/input"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/phonenumber"
        android:visibility="invisible"
        android:inputType="number"
        android:id="@+id/verificationcode"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:hint="write verificaton code here"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verificationcode"
        android:background="@drawable/button"
        android:layout_marginTop="40dp"
        android:id="@+id/getcode"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:layout_marginLeft="110dp"
        android:textStyle="bold"
        android:text="send verification code"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getcode"
        android:background="@drawable/button"
        android:id="@+id/verifiy"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:layout_marginLeft="130dp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:text="verify phone number"/>

</RelativeLayout>