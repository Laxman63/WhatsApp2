<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/relativelayout"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@drawable/profile_activity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileprofile"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="130dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/profile_image" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileprofile"
        android:text="USER NAME"
        android:textStyle="bold"
        android:id="@+id/usernameprofileA"
        android:textColor="#00000C"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="25sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameprofileA"
        android:text="hey i am using my whatsapp"
        android:textColor="#00000C"
        android:id="@+id/visit_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/visit_status"
        android:id="@+id/sendmessagebuuton"
        android:text="send message"
        android:textColor="@color/cardview_light_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/button"
        android:layout_marginBottom="60dp"
        android:padding="19dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sendmessagebuuton"
                android:id="@+id/acceptrequest"
                android:text="cancel request"
                android:textColor="@color/cardview_light_background"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:layout_marginBottom="20dp"
                android:visibility="invisible"
                android:padding="19dp"/>
        </RelativeLayout> </ScrollView>
</RelativeLayout>